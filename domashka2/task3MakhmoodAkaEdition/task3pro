import os
import time
number = 0
age = 0
name = 0
base = [name, age, number]
while True:
    print('Здравствуйте, я искусственный интеллект Антон. А как зовут Вас?')
    name = input()
    if name == 'admin':
        print('Введите пароль')
        pas = input('__')
        if pas == 123321:
            print('Пароль верный')
        print('Ваша база')
        print(base)
